{
  "name": "dosadczuk/container",
  "version": "0.1.0",
  "type": "library",
  "authors": [
    {
      "name": "Damian Osadczuk",
      "homepage": "https://github.com/dosadczuk"
    }
  ],
  "homepage": "https://github.com/dosadczuk/di-container",
  "scripts": {
    "test": "pest --config=phpunit.xml",
    "post-install-cmd": "cghooks add --ignore-lock",
    "post-update-cmd": "cghooks update"
  },
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "pestphp/pest": "^1.21",
    "brainmaestro/composer-git-hooks": "^2.8"
  },
  "suggest": {
    "ext-fileinfo": "Required to load config.",
    "ext-yaml": "Required to load YAML config.",
    "ext-json": "Required to load JSON config.",
    "ext-xml": "Required to load XML config.",
    "ext-libxml": "Required to load XML config.",
    "ext-simplexml": "Required to load XML config."
  },
  "autoload": {
    "psr-4": {
      "Container\\Core\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Container\\Test\\": "tests/"
    }
  },
  "extra": {
    "hooks": {
      "config": {
        "stop-on-failure": "pre-push"
      },
      "pre-push": "composer run test"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
