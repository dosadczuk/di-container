{
  "name": "dosadczuk/container",
  "description": "DI Container PoC for learning purpose only.",
  "type": "library",
  "homepage": "https://github.com/dosadczuk/di-container",
  "authors": [
    {
      "name": "dosadczuk"
    }
  ],
  "scripts": {
    "test": "phpunit --config=phpunit.xml"
  },
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.6",
    "mikey179/vfsstream": "^v1.6.8"
  },
  "suggest": {
    "ext-fileinfo": "Required to load config.",
    "ext-json": "Required to load JSON config.",
    "ext-xml": "Required to load XML config."
  },
  "config": {
    "platform": {
      "php": "8.0.0"
    }
  },
  "autoload": {
    "psr-4": {
      "Container\\Core\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Container\\Tests\\": "tests/"
    }
  }
}
